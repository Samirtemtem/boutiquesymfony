{% extends 'base.html.twig' %}

{% block title %}Hello ClientController!
{% endblock %}

{% block body %}

<div class="container">
	<h1>Categories:
	</h1>
	{% if error is defined %}

		<div class="alert alert-danger">Le categorie contient des produits</div>
	{% endif %}
	<div class="btn btn-info">


		<a href="{{ path('ajoutercategorie')}}" style="text-decoration:none;color:white;">Ajouter une categorie</a>

	</div>
</div>
{% for message in app.flashes("success") %}
	<div class="alert alert-success">
		{{message}}
	</div>

{% endfor %}

<div class="container">
	<table class="table" border="1">
		<tr>
			<div class="row">
				<td>
					<div class="col-" style="width:20px;">
						ID
					</div>
				</td>
				<td>
					<div class="col-">

						Nom Categorie</div>
				</td>
				<td>
					<div class="col-">
						Image Categorie
					</div>
				</td>
			</div>
		</tr>
	</td>
</tr>

{% for categorie in categories %}
	<tr>
		<div class="row">
			<td>
				<div class="col-" style="width:20px;">

					{{categorie.getId()}}
				</div>
			</td>
			<td>

				<div class="col-">
					{{categorie.getNom()}}</div>
			</td>
			<td>

				<div class="col-">
					<img src="../uploads/{{ categorie.getNomImage() }}" width="100" height="100" alt="photo"></div>
			</td>
		</div>
	</tr>
</td>

<td>
	<div class="col-x">

		<a class="btn btn-danger" href="{{ path('deletecategorie', {'id': categorie.getId()}) }}">Supprimer</a>


		<br>
		<a class="btn btn-info" href="{{ path('modifycategorie', {'id': categorie.getId()}) }}">modifier</a>


	</div>
</td></div></tr></td></tr>{% endfor %}</table></div>{% endblock %}
