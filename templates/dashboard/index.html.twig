{% extends 'base.html.twig' %}

{% block title %}Bienvenue, Admin !
{% endblock %}

{% block body %}
	{% if is_granted('ROLE_ADMIN') %}
		<div class="container">
			<div class="row">
				<h1>
					Tableau de board
				</h1>
			</div>
			<div class="row mt-3">
				<div class="col-6 alert-success">
					<span class="display-3">
						{{ countClients|length }}
					</span>
					Clients
				</div>
				<div class="col-6 alert-success">
					<span class="display-3">
						{{ countProduits|length }}
					</span>
					Produits
				</div>
				<div class="col-6 alert-success">
					<span class="display-3">
						{{ countCommandes|length }}
					</span>
					Commandes
				</div>
				<div class="col-6 alert-success">
					<span class="display-3">
						{{ countCategories|length }}
					</span>
					Categories
				</div>

			</div>
		{% endif %}
	{% endblock %}
