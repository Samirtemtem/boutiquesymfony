{% extends 'index/base.html.twig' %}


{% block title %}Categories
{% endblock %}

{% block body %}
	<style>
		body {
			font-family: avalonregular, HelveticaNeue-Light, "Helvetica Neue Light", "Helvetica Neue", Helvetica, Arial;
			letter-spacing: 0.1em;
		}

		h2 {
			display: block;
			text-align: center;
			margin-bottom: 0.5rem;
			padding: 2rem;
			color: #6097a9;
		}
	</style>
	<h2>Consulter par categorie</h2>
	<section class="row">
		{% for categorie in categories %}
			<div class="card" style="width: 18rem;margin:10px;">
				<img class="card-img-top" src="../uploads/{{categorie.getNomImage()}}" alt="Card image cap">

				<div class="card-body">
					<h5 class="card-title">{{categorie.nom}}</h5>
					<a href="{{ path('afficherproduits', {'id': categorie.getId()})}}" class="btn btn-primary">Consulter</a>

				</div>
			</div>
		{% endfor %}
	</section>
{% endblock %}
