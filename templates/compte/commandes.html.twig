{% extends 'index/base.html.twig' %}

{% block title %}Hello CompteController!
{% endblock %}


{% block body %}
<div class="container">
	<h1>Vos commandes:
	</h1>
	<div class="container">
		{% for message in app.flashes("success") %}
			<div class="alert alert-success">
				{{message}}
			</div>

		{% endfor %}

		<table class="table" border="1">
			<tr>
				<div class="row">
					<td>
						<div class="col-">
							ID
						</div>
					</td>
					<td>
						<div class="col-">

							Date
						</div>
					</td>
					<td>
						<div class="col-">

							Etat
						</div>
					</td>


				</div>
			</tr>
		</td>
	</tr>

	{% for commande in commandes %}
		<tr>
			<div class="row">
				<td>
					<div class="col-">
						{{commande.getId()}}
					</div>
				</td>
				<td>

					<div class="col-">
						{{commande.getdate()|date('Y-m-d')}}</div>

				</td>
				<td>
					<div class="col-">
						{% if (commande.getetat()) %}
							Livré
						{% else %}
							Non Livré
						{% endif %}
					</div>
				</td>
				<td>
					<div class="col-x">

						<a href="{{ path('supprimercommande', {'id': commande.getId()}) }}">Supprimer</a>

						<a href="{{ path('comptecommande', {'id': commande.getId()}) }}">Voir</a>


					</div>
				</td>


			</div>
		</tr>
	</td>
</tr>{% endfor %}</table></div>{% endblock %}
